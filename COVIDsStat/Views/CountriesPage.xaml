<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          x:Class="COVIDsStat.Views.CountriesPage"
                          x:TypeArguments="vm:CountriesViewModel"
                          xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                          xmlns:vm="clr-namespace:COVIDsStat.ViewModels"
                          x:Name="countriespage">
   
    <ListView x:Name="countriesList"
              ItemSelected="Handle_ItemSelected"
              HasUnevenRows="True">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Grid Padding="15,5">
                        <Label Text="{Binding Country}" TextColor="#363636" FontSize="Title"/>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
   
</rxui:ReactiveContentPage>
